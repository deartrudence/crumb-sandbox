<p id="notice"><%= notice %></p>

<h1>Campaign Templates</h1>

<table>
  <thead>
    <tr>
      <th>Campaign</th>
      <th>Template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaign_templates.each do |campaign_template| %>
      <tr>
        <td><%= campaign_template.campaign %></td>
        <td><%= campaign_template.template %></td>
        <td><%= link_to 'Show', campaign_template %></td>
        <td><%= link_to 'Edit', edit_campaign_template_path(campaign_template) %></td>
        <td><%= link_to 'Destroy', campaign_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Campaign Template', new_campaign_template_path %>
