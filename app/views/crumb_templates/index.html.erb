<p id="notice"><%= notice %></p>

<h1>Crumb Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crumb_templates.each do |crumb_template| %>
      <tr>
        <td><%= crumb_template.name %></td>
        <td><%= link_to 'Show', crumb_template %></td>
        <td><%= link_to 'Edit', edit_crumb_template_path(crumb_template) %></td>
        <td><%= link_to 'Destroy', crumb_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crumb Template', new_crumb_template_path %>
